<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APPValidarBoleteriaNotions.MainPage"
             xmlns:views="clr-namespace:APPValidarBoleteriaNotions.Views">

    <ScrollView HorizontalOptions="Center">

        <!--panel de mensajes-->
        <views:MensajeView x:Name="Mensaje" IsVisible="False" HorizontalOptions="FillAndExpand"/>

        <Grid RowDefinitions="*">

            <!--panel 1-->
            <VerticalStackLayout x:Name="Panel1" IsVisible="true" HorizontalOptions="Center" VerticalOptions="Center" Padding="30,0" Spacing="25">

                <Label  HorizontalOptions="Center" FontAttributes="Bold" FontFamily="bold" FontSize="Title" Text="Control de" TextColor="#2D2D2D"/>
              
                <Button x:Name="btnComenzarValidarHash" Margin="0,20,0,0" BackgroundColor="#1E90FF" HeightRequest="60" WidthRequest="200"  TextColor="#FBF5FD" Text="Validar Código" Clicked="btnValidarHash_Clicked">
                    <Button.ImageSource>
                        <FontImageSource Glyph="&#xe33c;" FontFamily="AwesomeSolid"/>
                    </Button.ImageSource>
                </Button>

                <Button x:Name="btnComenzarValidarQR" Margin="0,20,0,0" BackgroundColor="#1E90FF" HeightRequest="60" WidthRequest="200"  TextColor="#FBF5FD" Text="Validar QR" Clicked="btnValidarQR_Clicked">
                    <Button.ImageSource>
                        <FontImageSource Glyph="&#xf029;" FontFamily="AwesomeSolid"/>
                    </Button.ImageSource>
                </Button>

            </VerticalStackLayout>
                
            <!--panel 2-->

            <VerticalStackLayout x:Name="Panel2" IsVisible="false" HorizontalOptions="Center" VerticalOptions="Center" Padding="30,0" Spacing="25">

                <Label  HorizontalOptions="Center" FontAttributes="Bold" FontFamily="bold" FontSize="Title" Text="Control de" TextColor="#2D2D2D"/>
                <Label  HorizontalOptions="Center" FontAttributes="Bold" FontFamily="bold" FontSize="Title" Text="Entrada" TextColor="Aqua" />

                <Image x:Name="Imagen" HorizontalOptions="Center">
                    <Image.Source>
                        <FontImageSource FontFamily="AwesomeSolid" Glyph="&#xf058;" Size="88" Color="#5f945e"/>
                    </Image.Source>
                </Image>

                <Label x:Name="lbTicket" Text="#937" HorizontalOptions="Center"  HorizontalTextAlignment="Center" FontSize="Medium"/>

                <Label x:Name="lbEvento" Text="Festival con Combos" HorizontalOptions="Center" FontSize="Title"/>

                <Label x:Name="lbFuncion" Text="Dia 1" HorizontalOptions="Center" FontSize="Medium"/>

                <Label x:Name="lbSector" Text="Ingreso al Sector a las 12:42" HorizontalOptions="Center" FontSize="Medium" />

                <Label x:Name="lbTipoUbicacion" Text="Jubilados" HorizontalOptions="Center" FontSize="Medium" />

                <Label x:Name="lbTextoEntrada" Text="Jubilados" HorizontalOptions="Center" FontSize="Medium" />

                <Label x:Name="lbIngresoSector" Text="Jubilados" HorizontalOptions="Center" FontSize="Medium" />

                <Button x:Name="btnValidarQR" Margin="0,20,0,0" BackgroundColor="#1E90FF" HeightRequest="60" WidthRequest="200"  TextColor="#FBF5FD" Text="Validar Siguiente QR" Clicked="btnValidarQR_Clicked">
                    <Button.ImageSource>
                        <FontImageSource Glyph="&#xf029;" FontFamily="AwesomeSolid"/>
                    </Button.ImageSource>
                </Button>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>

</ContentPage>
