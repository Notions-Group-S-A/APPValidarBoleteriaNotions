<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APPValidarBoleteriaNotions.Views.MensajeView">
    
    <ScrollView HorizontalOptions="Fill">
        
        <Grid ColumnDefinitions=".2*,.8*">

            <RoundRectangle BackgroundColor="Transparent" HeightRequest="60" HorizontalOptions="Center" VerticalOptions="Start" WidthRequest="68"/>
            <Image HorizontalOptions="Center" VerticalOptions="Start">
                <Image.Source>
                    <FontImageSource x:Name="mensajeIcono" FontFamily="AwesomeSolid"/>
                </Image.Source>
            </Image>
            <VerticalStackLayout Grid.Column="1"  HorizontalOptions="Start" >
      
                <Label x:Name="lbMensajeTitulo" FontSize="Title" Text=""/>
                <ScrollView HeightRequest="100">
                    <Label x:Name="lbMensajeDetalle" FontSize="Body" Text=""/>
                </ScrollView >
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
    
</ContentView>
